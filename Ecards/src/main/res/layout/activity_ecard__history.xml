<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/layout_fb_list_background"
    tools:context="com.ISD.diy_ecards.ecards.ECard_History">

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="#009a49"
        android:gravity="center"
        android:typeface="serif"
        android:text="@string/View_ECard_History" />
    <ListView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="50dp"
        android:id ="@+id/LV_EcardHistory"
        android:divider="@color/DarkGreen"
        android:dividerHeight="2dp"
        >
    </ListView>
</RelativeLayout>
